   journal = {NeuroImage},
   keywords = {Ascending arousal and motor systems,Cuneiform/pedunculotegmental/oral pontine reticular/paramedian raphe/caudal linear raphe nuclei,Human mesopontine tegmental nuclei,In vivo neuroimaging template,Multi-contrast 7 T MRI},
   month = {4},
   pages = {222-230},
   pmid = {28476663},
