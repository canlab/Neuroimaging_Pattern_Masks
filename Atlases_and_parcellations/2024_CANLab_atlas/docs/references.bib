@article{Xue2021-ak,
author = {Xue, Aihuiping and Kong, Ru and Yang, Qing and Eldaief, Mark C. and Angeli, Peter A. and DiNicola, Lauren M. and Braga, Rodrigo M. and Buckner, Randy L. and Yeo, B. T. Thomas},
title = {The detailed organization of the human cerebellum estimated by intrinsic functional connectivity within the individual},
