   pages = {4953-4964},
   pmid = {25810525},
   publisher = {Society for Neuroscience},
   title = {Ventral pallidal projections to mediodorsal thalamus and ventral tegmental area play distinct roles in outcome-specific pavlovian-instrumental transfer},
