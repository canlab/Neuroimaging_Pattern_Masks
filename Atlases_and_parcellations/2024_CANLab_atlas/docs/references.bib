   issn = {0022-3069},
   issue = {6},
   journal = {Journal of Neuropathology \& Experimental Neurology},
   keywords = {Arousal,Ascending reticular activating system (ARAS),Brainstem,Consciousness,High angular resolution diffusion imaging (HARDI),Neuroanatomy,Tractography},
   month = {6},
   pages = {531-546},
   title = {Neuroanatomic Connectivity of the Human Ascending Arousal System Critical to Consciousness and Its Disorders},
   volume = {71},
   url = {https://academic.oup.com/jnen/article-lookup/doi/10.1097/NEN.0b013e3182588293},
